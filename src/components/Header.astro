---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
	<h2><a href="/">{SITE_TITLE}</a></h2>
	<nav>
		<HeaderLink href="/">Home</HeaderLink>
		<HeaderLink href="https://twitter.com/philipschm1tt" target="_blank">Twitter</HeaderLink>
		<HeaderLink href="https://www.linkedin.com/in/philipschm1tt/" target="_blank">LinkedIn</HeaderLink>
		<HeaderLink href="/imprint">Imprint</HeaderLink>
		<HeaderLink href="/privacy">Privacy</HeaderLink>
	</nav>
</header>
