---
import HeaderLink from './HeaderLink.astro';
import { SITE_NAME } from '../consts';
import logo from '../assets/schmitthub_logo.svg'
---

<header>
	<h2 class="logo"><a href="/"><img src={ logo.src } alt={ SITE_NAME } width="238px" height="50px"></a></h2>
	<nav>
		<HeaderLink href="/">Home</span>
		<HeaderLink href="https://bsky.app/profile/philipschm1tt.de" target="_blank">Bluesky</HeaderLink>
		<HeaderLink href="https://www.linkedin.com/in/philipschm1tt/" target="_blank">LinkedIn</HeaderLink>
		<HeaderLink href="/imprint">Imprint</HeaderLink>
		<HeaderLink href="/privacy">Privacy</HeaderLink>
	</nav>
</header>
