<style>
	header {
		width: 1000px;
		max-width: calc(100% - 2em);
		margin: auto;
		padding-top: 1em;
	}
	h2 {
		display: inline-block;
	}
	.logo {
		margin-left: 0;
	}
	.logo img {
		display: inline-block;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
</style>
